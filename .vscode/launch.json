    "version": "0.2.0",
    "configurations": [
        {
            "name": "Online Interactive",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/workplace-sync/",
            "args": [
                "-host",
                "ws.hdev.io"
            ]
        },
        {
            "name": "Local Interactive",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/workplace-sync/",
            "args": [
                "-local",
                "C:\\DEV\\workplace-sync\\sample.json"
            ]
        },
        {
            "name": "Local install app",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/workplace-sync/",
            "args": [
                "-local",
                "C:\\DEV\\workplace-sync\\sample.json",
                "-name",
                "age"
            ]
        },
        {
            "name": "Update",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/workplace-sync/",
            "args": [
                "-update"
            ]
        }
    ]
}